#!/bin/bash

DEFAULT_TTB_COMMAND=${DEFAULT_TTB_COMMAND:-"test"}
SCRIPT_NAME=`basename "${BASH_SOURCE[0]}"`
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SOLR_CONTAINER=tellusr_solr
TELLUSR_VERSION=${TELLUSR_VERSION:-"latest"}

## Some default project config variables
PROJECT=default
PROJECT_DIR=.
if [ -f "./tellusr.env" ]; then
    PROJECT_DIR=`realpath "."`
elif [ -f "../tellusr.env" ]; then
    PROJECT_DIR=`realpath ".."`
elif [ -f "../../tellusr.env" ]; then
    PROJECT_DIR=`realpath "../.."`
elif [ -f "../../../tellusr.env" ]; then
    PROJECT_DIR=`realpath "../../.."`
fi
SOLR_CONFIG_DIR=$PROJECT_DIR/configset
SOLR_HOST="localhost"
BUILD_ROOT=$PROJECT_DIR


## Load local overrides for config variables
source "$PROJECT_DIR/tellusr.env"

SOLR_PORT=${SOLR_PORT:-"8983"}
SOLR_DATA_VOLUME="tellusr_solr_${PROJECT}_data_${SOLR_PORT}"
TELLUSR_RUN_PARAMS="-DzkRun"

## Docker on MacOS does not support --network=host, compensate
if [[ "$OSTYPE" == "darwin"* ]]
then
    LOCALHOST="host.docker.internal"
    TELLUSR_RUN_OPTIONS="--rm $TELLUSR_RUN_OPTIONS"
else
    LOCALHOST="localhost"
    TELLUSR_RUN_OPTIONS="--network=host --rm $TELLUSR_RUN_OPTIONS"
fi

## Check if docker command needs to be run as sudo
DOCKER=$(docker ps &> /dev/null && echo "docker" || echo "sudo docker")

function trace {
    set -x
    $@
    { set +x; } 2> /dev/null
}


function run {
    let ZOOKEEPER_PORT=SOLR_PORT+1000
    $DOCKER volume rm tellusr_solr_test_data 2> /dev/null || echo -n
    trace $DOCKER run \
            -d ${TELLUSR_RUN_OPTIONS} \
            -p ${SOLR_PORT} \
            -p ${ZOOKEEPER_PORT} \
            -e ZOOKEEPER_ID=${ZOOKEEPER_ID:-"1"} \
            -e SOLR_HEAP=${SOLR_HEAP:-"4096m"} \
            -e TELLUSR_BACKEND_URL=${BACKEND_URL:-"http://${LOCALHOST}:${BACKEND_PORT:-"8989"}"} \
            -e SOLR_DISABLE_SECURITY_JSON="true" \
            -e SOLR_PORT=$SOLR_PORT \
            -v ${SOLR_DATA_VOLUME}:/var/solr \
            -v $BUILD_ROOT/configset:/setup/configset \
            --log-driver none \
            --name ${SOLR_CONTAINER}_${SOLR_PORT} \
            tellusr/demo:${TELLUSR_VERSION} $TELLUSR_RUN_PARAMS
    sleep 1
}

function _migrate_data {
    ## Check if migrate_data function is defined in tellusr.env, and if so run it
    if [ _migrate_data_defined ]
    then
	migrate_data $1 $2
    fi
}

function volume_drop {
    echo -n "Dropping volume: "
    $DOCKER volume rm ${SOLR_DATA_VOLUME}
}

function migrate {
    wait_for_solr
    echo -n "Attached to: "
    $DOCKER exec -t ${SOLR_CONTAINER}_${SOLR_PORT} create_collections.sh
    _migrate_data $SOLR_HOST $PORT
}

function demo_migrate {
    wait_for_solr
    echo -n "Attached to: "
    $DOCKER exec -t ${SOLR_CONTAINER}_${SOLR_PORT} demo_migrate.sh
}

function console {
    $DOCKER exec -it ${SOLR_CONTAINER}_${SOLR_PORT} bash
}


function stop {
    CONTAINER=${SOLR_CONTAINER}_${SOLR_PORT}
    if [ "$($DOCKER ps -q -f name="${CONTAINER}")" ]; then
        echo -n "Stopping: "
        $DOCKER stop "${CONTAINER}"
    fi
}

function wait_for_solr {
    $DOCKER exec -it ${SOLR_CONTAINER}_${SOLR_PORT} wait-for-solr.sh
}


function wait_for_zookeeper {
    $DOCKER exec -it ${SOLR_CONTAINER}_${SOLR_PORT} wait-for-zookeeper.sh
}



function echo_zoo_cfg {
    cat <<EOSCRIPT
# The number of milliseconds of each tick
tickTime=2000
# The number of ticks that the initial
# synchronization phase can take
initLimit=100
# The number of ticks that can pass between
# sending a request and getting an acknowledgement
syncLimit=5
dataDir=/var/solr/data/zoo_data
# clientPort=2181

# admin.enableServer=false
server.1=localhost:2888:3888
server.2=localhost:2889:3889
server.3=localhost:2890:3890
EOSCRIPT
}


function help {
    CMD=${BASH_SOURCE[0]}
    echo "$CMD volume_drop run migrate demo_migrate console stop"
    echo "$CMD test|test_cloud|demo"
}

function create {
    NEW_CORE=$1
    TELLUSR_RUN_PARAMS="" 
    run
    mkdir -p $BUILD_ROOT/configset/$NEW_CORE/
    $DOCKER exec -t ${SOLR_CONTAINER}_${SOLR_PORT} solr create_core -c test
    $DOCKER cp ${SOLR_CONTAINER}_${SOLR_PORT}:/var/solr/data/test/conf $BUILD_ROOT/configset/$NEW_CORE/conf
    stop
    volume_drop
}



function die {
    echo $1
    exit 1
}

# Default command
if [ "$#" == "0" ]; then
    set -- $DEFAULT_TTB_COMMAND
fi

# Multiple commands
while (( "$#" ))
do
    ARG="$1" && shift || die "Missing argument"
    case $ARG in
        install)
            if [[ -e zoo.cfg ]]
            then
                cp zoo.cfg configset/
                export ZOOKEEPER_ID="$1" && shift || die "Cloud mode needs a zookeeper id"
                [[ $ZOOKEEPER_ID =~ ^[0-9]+ ]] || die "Zookeeper id '$ZOOKEEPER_ID' should be and integer"
            fi
            SOLR_DATA_VOLUME=${INSTALL_SOLR_DATA_VOLUME:-$SOLR_DATA_VOLUME}
            run
            migrate
            stop
            ;;
        create)
            NEW_CORE="$1" && shift || die "Create needs a new core name"
            create $NEW_CORE
            ;;
	run)
	    run
	    ;;

	stop)
	    stop
	    ;;

	migrate)
	    migrate
	    ;;

	demo_migrate)
	    demo_migrate
	    ;;

	console)
	    console
	    ;;

	volume_drop)
	    volume_drop
	    ;;

	wait_for_solr)
            wait_for_solr
	    ;;

	demo)
            volume_drop
	    run
            migrate
            demo_migrate
            console
            stop
	    ;;

	test)
            volume_drop
	    run
            wait_for_solr
            migrate
            console
            stop
	    ;;

	test_cloud)
            echo "Project: $PROJECT"
            mkdir -p configset
            echo_zoo_cfg > $PROJECT_DIR/configset/zoo.cfg
            export TELLUSR_RUN_PARAMS="-DzkRun"
            let SOLR_PORT2=SOLR_PORT+1
            let SOLR_PORT3=SOLR_PORT+2
            ENV2="env SOLR_PORT=$SOLR_PORT2 ZOOKEEPER_ID=2"
            ENV3="env SOLR_PORT=$SOLR_PORT3 ZOOKEEPER_ID=3"
            CMD=${BASH_SOURCE[0]}
            stop; $ENV2 $CMD stop; $ENV3 $CMD stop
            volume_drop; $ENV2 $CMD volume_drop; $ENV3 $CMD volume_drop
            run; $ENV2 $CMD run; $ENV3 $CMD run
            migrate
            console
            stop; $ENV2 $CMD stop; $ENV3 $CMD stop
            rm $PROJECT_DIR/configset/zoo.cfg
	    ;;

        help)
            help
            ;;
        *)
            echo "Unrecoginzed command $ARG"
            help
            exit 1
            ;;
    esac
done
